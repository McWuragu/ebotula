pipeline {
    agent any

    environment {
        // Optional: zusÃ¤tzlicher Pfad, wenn autotools oder gcc manuell installiert sind
        PATH = "/usr/local/bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Code wird aus Git geholt...'
                git 'https://github.com/McWuragu/ebotula.git'
            }
        }

        stage('Bootstrap') {
            steps {
                echo 'âš™ï¸ Autotools vorbereiten...'
                sh '''
			set -e
			aclocal
			autoheader
			autoconf
			automake --add-missing --foreign
		'''
            }
        }

        stage('Configure') {
            steps {
                echo 'ğŸ› ï¸ Konfiguration lÃ¤uft...'
                sh './configure'
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ”§ Projekt wird gebaut...'
                sh 'make'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸš¦ Tests werden ausgefÃ¼hrt (sofern vorhanden)...'
                sh './testsuit/testsuit || true'
            }
        }

        stage('Install (lokal)') {
            steps {
                echo 'ğŸ“¦ Projekt lokal installieren...'
                sh 'make install DESTDIR=$WORKSPACE/install'
            }
        }
    }

    post {
        success {
            echo 'âœ… Build erfolgreich!'
        }
        failure {
            echo 'âŒ Build ist fehlgeschlagen!'
        }
    }
}

